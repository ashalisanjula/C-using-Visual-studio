<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>@ViewBag.Message</h2>
    <p>There are @ViewBag.CustomerCount customers added to the list.</p>

    <table>
        <thead>
            <tr>
                <th>Customer id</th>
                <th>Customer Name</th>
                <th>Customer Amount</th>
            </tr>

        </thead>
        <tbody>
            @foreach(var item in ViewBag.CustomerList)
            {
                <tr>
                    <th>@item.id</th>
                    <th>@item.Name</th>
                    <th>@item.Amount</th>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
